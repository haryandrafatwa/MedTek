<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_160"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/margin_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_home_all_rounded"
            android:backgroundTint="@color/textColorLightGray"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:minHeight="144dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="@dimen/margin_32"
                android:layout_height="@dimen/margin_32"
                android:background="@color/shimmer_color"
                android:contentDescription="@string/unggahfoto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:textColor="#80000000"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginHorizontal="@dimen/margin_128"
                android:layout_marginTop="2dp"
                android:textSize="18sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_160"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/margin_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/bg_home_all_rounded"
            android:backgroundTint="@color/textColorLightGray"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/shimmer_color"
                android:contentDescription="@string/unggahfoto"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_16"/>

            <ImageView
                android:id="@+id/separator"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#80000000"
                android:layout_marginStart="@dimen/margin_16"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/shimmer_color"
                android:textColor="#60000000"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:layout_marginEnd="@dimen/margin_16"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_160"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/bg_home_all_rounded"
            android:backgroundTint="@color/textColorLightGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_32"
                android:paddingVertical="@dimen/margin_16">

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color"
                    android:layout_gravity="center"
                    android:contentDescription="@string/drrsloc"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#80000000"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginStart="@dimen/margin_16"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/roboto_medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:textSize="12sp"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:layout_marginTop="@dimen/margin_16"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:layout_marginBottom="@dimen/margin_32"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shimmer_color"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/margin_160"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/colorAccent"
            android:layout_marginStart="@dimen/margin_16"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/bg_home_all_rounded"
            android:backgroundTint="@color/textColorLightGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/margin_32"
                android:paddingVertical="@dimen/margin_8">

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color"
                    android:layout_gravity="center"
                    android:contentDescription="@string/drrsloc"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@color/shimmer_color"
                    android:textColor="#80000000"
                    android:textSize="12sp"
                    android:layout_marginStart="@dimen/margin_16"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/textColorGray"
                android:layout_marginStart="@dimen/margin_32"
                android:layout_marginEnd="200dp"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/margin_16"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/shimmer_color"
                android:layout_marginHorizontal="@dimen/margin_32"
                android:inputType="text|textMultiLine"
                android:padding="@dimen/margin_4"
                android:textSize="12sp"
                android:gravity="start|top"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_marginBottom="@dimen/margin_32"
                android:fontFamily="@font/roboto_medium"
                android:autofillHints="@string/hint_nama_lngkap"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/bg_button_red"
            android:backgroundTint="@color/shimmer_color"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:enabled="false"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>