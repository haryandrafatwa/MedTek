<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ToolbarThemePrimary"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detaildokter"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_gravity="start"/>

        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_share"
            android:backgroundTint="@android:color/white"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/detaildokter"/>

    </androidx.appcompat.widget.Toolbar>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_loader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/outer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/bg_home_all_rounded"
                        android:backgroundTint="@color/textColorLightGray"
                        android:paddingVertical="16dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_dokter1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:src="@color/shimmer_color"
                            android:contentDescription="@string/drname"/>

                        <TextView
                            android:id="@+id/tv_dr_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_color"
                            android:layout_marginHorizontal="@dimen/margin_56"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/civ_dokter1"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tv_dr_special1"
                            android:layout_width="match_parent"
                            android:background="@color/shimmer_color"
                            android:layout_marginHorizontal="@dimen/margin_56"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/tv_dr_name1"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/tv_dr_exp1"
                            android:layout_width="match_parent"
                            android:background="@color/shimmer_color"
                            android:layout_marginHorizontal="@dimen/margin_56"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/tv_dr_special1"
                            android:layout_marginTop="5dp"
                            android:drawableTint="@android:color/white"
                            android:drawablePadding="8dp"/>

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btnBuatJanji1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/outer1"
                        android:background="@drawable/bg_button_red"
                        android:backgroundTint="@color/textColorLightGray"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:id="@+id/rl_detail1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btnBuatJanji1"
                        android:layout_margin="@dimen/margin_16"
                        android:background="@drawable/bg_home_all_rounded"
                        android:backgroundTint="@color/textColorLightGray"
                        android:padding="@dimen/margin_16"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_128"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_128"
                            android:layout_marginTop="@dimen/margin_16"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_128"
                            android:layout_marginTop="@dimen/margin_16"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_128"
                            android:layout_marginTop="@dimen/margin_16"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginEnd="@dimen/margin_56"
                            android:layout_marginTop="@dimen/margin_8"
                            android:layout_marginStart="@dimen/margin_32"/>

                    </LinearLayout>

                </RelativeLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <RelativeLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/bg_home_all_rounded"
                    android:paddingVertical="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_dokter"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/drname"/>

                    <TextView
                        android:id="@+id/tv_dr_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drname"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/civ_dokter"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_dr_special"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drspe"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_dr_name"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:id="@+id/tv_dr_exp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lamakerja"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_bold"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_dr_special"
                        android:layout_marginTop="5dp"
                        android:drawableStart="@drawable/ic_briefcase"
                        android:drawableTint="@android:color/white"
                        android:drawablePadding="8dp"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/btnBuatJanji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/outer"
                    android:background="@drawable/bg_button_red"
                    android:text="@string/buatjanji"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:id="@+id/rl_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnBuatJanji">

                    <RelativeLayout
                        android:id="@+id/layout_pop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/pop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pop"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/roboto_bold"
                            android:drawableStart="@drawable/ic_hospital"
                            android:drawableTint="@color/colorPrimary"
                            android:drawablePadding="16dp"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="12"
                            android:layout_below="@+id/pop"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="42dp"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="11.4"
                                android:orientation="vertical"
                                android:paddingStart="0dp"
                                android:paddingEnd="16dp">

                                <TextView
                                    android:id="@+id/tv_dr_rs"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:fontFamily="@font/roboto_medium"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="14sp"/>

                                <TextView
                                    android:id="@+id/tv_dr_loc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/drrsloc"
                                    android:textColor="@color/textColorGray"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"/>

                            </LinearLayout>

                            <ImageButton
                                android:id="@+id/ib_rs_loc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:background="@drawable/ic_info"
                                android:layout_gravity="center"
                                android:contentDescription="@string/drrsloc"/>

                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_graduated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_pop"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/graduated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lulusandari"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/roboto_bold"
                            android:drawableStart="@drawable/ic_graduated"
                            android:drawableTint="@color/colorPrimary"
                            android:drawablePadding="16dp"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/tv_dr_graduate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ui"
                            android:textColor="@color/colorAccent"
                            android:layout_below="@id/graduated"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="42dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_graduated"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp">

                        <TextView
                            android:id="@+id/review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/drrat"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/roboto_bold"
                            android:drawableStart="@drawable/ic_review"
                            android:drawableTint="@color/colorPrimary"
                            android:drawablePadding="16dp"
                            android:textSize="20sp"/>

                        <RatingBar
                            android:id="@+id/rb_dokter"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.05"
                            android:layout_marginStart="42dp"
                            android:layout_below="@id/review"
                            android:layout_marginTop="4dp"
                            android:backgroundTint="@color/colorAccent"/>

                        <TextView
                            android:id="@+id/tv_dr_rat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_toEndOf="@id/rb_dokter"
                            android:layout_below="@id/review"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/tv_dr_tot_rev"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_below="@id/tv_dr_rat"
                            android:layout_marginStart="42dp"
                            android:layout_marginTop="2dp"
                            android:textSize="18sp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_dr_tot_rev"
                            android:layout_marginStart="42dp"
                            android:layout_marginVertical="16dp"
                            android:orientation="vertical"
                            tools:listitem="@layout/item_feedback"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>