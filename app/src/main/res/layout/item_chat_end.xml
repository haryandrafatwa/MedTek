<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_end_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_screen_margin"
        android:layout_marginBottom="@dimen/default_screen_margin"
        android:background="@drawable/bg_schedule_offline"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="@dimen/default_screen_pad"
        android:paddingTop="@dimen/default_small_margin_4"
        android:paddingEnd="@dimen/default_screen_pad"
        android:paddingBottom="@dimen/default_small_margin_4"
        android:text="@string/end_session_time"
        android:textSize="@dimen/text_xs" />

</RelativeLayout>