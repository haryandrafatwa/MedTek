<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_inset_16"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:id="@+id/tv_nama_pasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/konfirmasipasienkamu"
                android:fontFamily="@font/roboto_medium"
                android:textSize="20sp"
                android:layout_toStartOf="@id/ib_close"
                android:textColor="@android:color/black"/>

            <ImageButton
                android:id="@+id/ib_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_clear"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/keluar"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/ktppasien"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_ktp_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:text="@string/lihatktppasien"
                android:textStyle="italic"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_ktp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16"
            app:riv_border_width="0.5dip"
            app:riv_border_color="#80000000"
            app:riv_corner_radius="12dip"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/filepasien"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_file_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="@string/lihatfilepasien"
                android:textStyle="italic"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/tanggal"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_tgl_janji"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/pukul"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_pukul_janji"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/detailpasien"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorPrimary"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0.4dp"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:background="@color/textColorGray"
                android:contentDescription="@string/separator"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/umur"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_umur_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/bb"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_berat_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/tb"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_tinggi_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/lp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_lingkar_pasien"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="end"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginHorizontal="@dimen/margin_16">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="@string/klhn"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorPrimary"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="0.4dp"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:background="@color/textColorGray"
                android:contentDescription="@string/separator"/>

        </LinearLayout>

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/tv_keluhan"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/lp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@android:color/black"
            android:layout_marginHorizontal="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_16"
            android:background="@drawable/bg_textarea"
            android:backgroundTint="@android:color/black"
            android:padding="@dimen/margin_8"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>