<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_bottom_rounded"
    android:backgroundTint="@color/textColorLightGray"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/greetings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/greeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/civ"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/margin_8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@color/shimmer_color"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/shimmer_color"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/margin_8"
                android:textSize="24sp"
                android:layout_marginTop="@dimen/margin_4"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/shimmer_color"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmer_color"
        android:layout_gravity="center_vertical"
        android:textColor="@color/mdtp_white"
        android:layout_marginTop="@dimen/margin_8"
        android:textSize="14sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/shimmer_color"
        android:background="@drawable/bg_search"
        android:layout_marginTop="4dp"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="46dp"
            android:src="@color/shimmer_color"
            android:layout_height="46dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/imageButton"
            android:layout_toEndOf="@id/circleImageView">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:layout_marginStart="16dp"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shimmer_color"
                android:layout_gravity="center_vertical"
                android:textColor="#FFA5A9"
                android:layout_marginStart="16dp"
                android:layout_marginTop="@dimen/margin_4"
                android:textSize="12sp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:contentDescription="@string/selanjutnya"
            android:background="@color/shimmer_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_8"/>

    </RelativeLayout>

</LinearLayout>