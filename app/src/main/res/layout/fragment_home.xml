<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_loader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/placeholder_header_home"/>
                <include layout="@layout/placeholder_home_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"/>

                <include layout="@layout/placeholder_home_recyclerview"/>
                <include layout="@layout/placeholder_home_recyclerview"/>

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <RelativeLayout
            android:id="@+id/layout_visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_bottom_rounded"
                android:padding="16dp">

                <RelativeLayout
                    android:id="@+id/greetings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/greeting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/civ_user"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_welcome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_color"
                            android:textColor="@android:color/white"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_nama_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:background="@color/shimmer_color"
                            android:layout_marginTop="@dimen/margin_4"
                            android:textSize="24sp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_user"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentEnd="true"
                        android:src="@color/shimmer_color"/>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_search"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:layout_below="@id/greetings"
                    android:layout_marginTop="16dp"
                    android:background="@color/shimmer_color"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_search"
                        android:layout_gravity="center"
                        android:contentDescription="@string/search"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/placeholderSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:layout_gravity="center_vertical"
                        android:textColor="#FFA5A9"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:visibility="invisible"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/header"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_home_all_rounded"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_wallet_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/tv_saldo"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/saldo_user"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:background="@color/shimmer_color"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12"
                    android:layout_gravity="center_vertical"
                    android:padding="16dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/ib_topup"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/topup"/>

                        <TextView
                            android:id="@+id/tv_topup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_color"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_marginHorizontal="@dimen/margin_16"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/ib_withdraw"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/withdraw"/>

                        <TextView
                            android:id="@+id/tv_withdraw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_color"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_marginHorizontal="@dimen/margin_16"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_medium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/ib_history"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/history"/>

                        <TextView
                            android:id="@+id/tv_history"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/shimmer_color"
                            android:layout_marginTop="@dimen/margin_4"
                            android:layout_marginHorizontal="@dimen/margin_16"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rekomendasi_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wallet"
                android:layout_marginTop="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/st_rekrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/tv_rekrs"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_color"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeMaxTextSize="100sp"
                        app:autoSizeStepGranularity="10sp"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_seerekrs"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="@string/lihatsemua"
                        android:textSize="12sp"
                        android:gravity="center_vertical|end"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_rekrs">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_rekrs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_rekomendasi_rs"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:id="@+id/ll_rekrsk_loader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:background="@drawable/bg_loading"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:contentDescription="@string/notfound"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/notfound"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_empty_hospital"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:background="@drawable/bg_recycler_item"
                        android:layout_marginHorizontal="@dimen/margin_16"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:visibility="gone">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_rs_empty"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/ic_hospital_icon"/>

                        <TextView
                            android:id="@+id/tv_hospital_empty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/textColorDark"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_below="@id/civ_rs_empty"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_8"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rekomendasi_dr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rekomendasi_rs"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/st_rekdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/tv_rekdr"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_color"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_seerekdr"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:text="@string/lihatsemua"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_rekdr">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_popdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_popular_doctor"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:id="@+id/ll_popdok_loader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:background="@drawable/bg_loading"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:contentDescription="@string/notfound"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/notfound"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rekomendasi_dr"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/st_artikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/tv_artikel"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmer_color"
                        android:layout_marginStart="@dimen/margin_16"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_seeartikel"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|end"
                        android:layout_marginEnd="@dimen/margin_16"
                        android:text="@string/lihatsemua"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/st_artikel">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_artikel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_artikel_kesehatan"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/ll_artikel_loader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="12"
                        android:background="@drawable/bg_loading"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="8"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:layout_marginStart="@dimen/margin_16"
                            android:layout_marginEnd="@dimen/margin_8"
                            android:contentDescription="@string/notfound"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:background="@color/shimmer_color"
                            android:contentDescription="@string/notfound"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_artikel_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_artikel_empty"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginHorizontal="72dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_empty"
                            android:contentDescription="@string/emptyartikel"/>

                        <TextView
                            android:id="@+id/tv_empty_artikel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_artikel_empty"
                            android:text="@string/emptyartikel"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_user_not_verified"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_user_not_verified"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginHorizontal="72dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/ic_verified_illustration"
                            android:contentDescription="@string/blmverified"/>


                        <TextView
                            android:id="@+id/tv_user_not_verified"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_user_not_verified"
                            android:text="@string/blmverified"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"/>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>