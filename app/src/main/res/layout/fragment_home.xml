<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_home_bottom_rounded"
            android:padding="16dp">

            <RelativeLayout
                android:id="@+id/greetings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/greeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/civ_user"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcomeback"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_user"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ellipse"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_below="@id/greetings"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_search"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_search"
                    android:layout_gravity="center"
                    android:contentDescription="@string/search"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search"
                    android:layout_gravity="center_vertical"
                    android:textColor="#FFA5A9"
                    android:layout_marginStart="16dp"
                    android:textSize="14sp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_home_all_rounded"
            android:orientation="vertical"
            android:weightSum="12">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_top_rounded"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saldo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/saldo_value"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/saldo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/saldo_value"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="12"
                android:layout_gravity="center_vertical"
                android:padding="16dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_top_up"
                        android:contentDescription="@string/topup"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isiulang"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_withdraw"
                        android:contentDescription="@string/withdraw"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tarik"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_medium"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_history_wallet"
                        android:contentDescription="@string/history"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/riwayat"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rekomendasi_rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wallet"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:id="@+id/st_rekrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_rekrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rsrekomendasi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_toStartOf="@id/tv_seerekrs"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tv_seerekrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lihatsemua"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_rekrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/st_rekrs"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_rekomendasi_rs"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/rekomendasi_dr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rekomendasi_rs"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/st_rekdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_rekdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drpopuler"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_toStartOf="@id/tv_seerekdr"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tv_seerekdr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lihatsemua"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/colorAccent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_rekdr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/st_rekdr"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_rekomendasi_dr"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rekomendasi_dr"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:id="@+id/st_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/artikelkesehatan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_toStartOf="@id/tv_seeartikel"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tv_seeartikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lihatsemua"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/st_artikel"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_artikel_kesehatan"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>